<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/aboutbg"
    tools:context=".AboutUS">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/me2"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By Sakhawat hossain Khondoker"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science and Technology"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feni Computer Institute"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch : 13th"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone : 01858969608"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            />





        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Now"
            android:drawableLeft="@drawable/ic_call"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >

        </Button>

<ImageView
    android:id="@+id/facebook_id"
    android:layout_width="180dp"
    android:layout_height="100dp"
    android:src="@drawable/facebook"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    />
    </LinearLayout>

</ScrollView>